---
import PageHeading from "../components/page-heading.astro";
import Layout from "../layouts/main.astro";
---

<Layout title="Curriculum Vitae">
  <section class="relative z-20 max-w-2xl mx-auto my-12 px-7 lg:px-0">
    <PageHeading
      title="Curriculum Vitae"
    />
  </section>

  <div class="flex justify-center -mx-7 lg:mx-auto mb-12 px-7 lg:px-0">
    <div class="border border-neutral-200 dark:border-neutral-700 rounded-lg overflow-hidden shadow-lg w-full" style="max-width: 794px;">
      <div style="position: relative; width: 100%; padding-top: 141.42%;">
        <iframe
          src="/assets/CV.pdf"
          style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; border: none;"
          title="Curriculum Vitae"
        ></iframe>
      </div>
    </div>
  </div>
</Layout>

